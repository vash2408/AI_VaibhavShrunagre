FUNCTION ProcessStudentQuery(query_text):
    // Use NLP to extract concepts and intent
    extracted_concepts = NLP_extract_entities(query_text) // e.g., using spaCy
    learning_intent = NLP_classify_intent(query_text)

    // Estimate the complexity of the query
    complexity_level = NLP_estimate_complexity(query_text)

    // Build a structured query object
    query_object = {
        "concepts": extracted_concepts,
        "intent": learning_intent,
        "complexity": complexity_level,
        "original_query": query_text
    }

    RETURN query_object
